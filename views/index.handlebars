<div class=container>
    <div class="jumbotron text-center">
        <h1>Burgers! Burgers!</h1>
    </div>
    <div class="row">
        <div class="col-md-5 panel">
            <div class="panel-heading">
                <h2>Bucket List Burgers</h2>
            </div>
            <div class="panel-body">
                    {{#each burgers}} {{#unless devoured}}
                        <div class="item-uneaten">
                            <button type="button" class="btn btn-sm  eat-da-burger" data-id="{{id}}">Eat Me!
                            </button>
                            {{burger_name}}
                        </div>
                    {{/unless}} {{/each}}
                <div class="form-group">
                <form class="create-form">
                    <div class="form-group form-inline">
                        <button type="submit" class="btn-sm add-burger">Add a Burger</button>
                        <input type="text" class="form-control" id="burger-name" name="burger_name" required="">
                    </div>
                </form>
                </div>
            </div>
        </div>
        <div class="col-md-5 panel">
            <div class="panel-heading">
                <h2>Burgers I have Known</h2>
            </div>
            <div class="panel-body">
                {{#each burgers}} {{#if devoured}}
                <div class="item-uneaten">
                   {{burger_name}} 
                 </div>
                {{/if}} {{/each}}
            </div>
        </div>
    </div>
</div>